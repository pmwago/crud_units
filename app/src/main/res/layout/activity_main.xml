<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUnitCode"
        android:layout_marginTop="35dp"
        android:hint="Enter unit code"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUnitName"
        android:layout_below="@id/txtUnitCode"
        android:layout_marginTop="35dp"
        android:hint="Enter unit name"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSem"
        android:layout_below="@id/txtUnitName"
        android:layout_marginTop="35dp"
        android:hint="Enter semester stage"
        android:inputType="numberDecimal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtYear"
        android:layout_below="@+id/txtSem"
        android:layout_marginTop="35dp"
        android:hint="Enter year"
        android:inputType="date"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLec"
        android:layout_below="@+id/txtYear"
        android:layout_marginTop="35dp"
        android:hint="Enter lecturer's name"
        android:inputType="text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLec"
        android:id="@+id/btnAdd"
        android:text="ADD"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLec"
        android:text="SHOW ALL"
        android:textStyle="bold"
        android:id="@+id/btnShow"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="1dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLec"
        android:text="UPDATE"
        android:layout_toRightOf="@id/btnShow"
        android:textStyle="bold"
        android:id="@+id/btnUpdate"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="1dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLec"
        android:id="@+id/btnDelete"
        android:text="DELETE"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/btnUpdate"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="1dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpdate"
        android:id="@+id/btnCancel"
        android:text="CANCEL"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="1dp"
        />

</RelativeLayout>